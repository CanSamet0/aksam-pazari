<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">



    <ImageButton
        android:id="@+id/ib_category"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/category"
        android:fontFamily="@font/exo_light"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/ib_category"
        app:layout_constraintStart_toStartOf="@+id/ib_category"
        app:layout_constraintTop_toBottomOf="@+id/ib_category" />
</androidx.constraintlayout.widget.ConstraintLayout>